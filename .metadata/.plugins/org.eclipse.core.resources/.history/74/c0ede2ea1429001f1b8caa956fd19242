package chap99;

import java.util.Scanner;

public class 시험연습 {

	public static void main(String[] args) {
		// 카페 키오스크 while이용해서 만들어보기
		int i = 1;
		while (i <= 5) {
			System.out.println(i);
			i++;
		}

		Scanner scan = new Scanner(System.in);
		System.out.println("어서오세요");
		System.out.println("어떤 메뉴를 준비해드릴까요?");
		System.out.println("1.아메리카노,2.카페라떼,3.모카라뗴,4.카라멜라떼,0종료");
		int coffee = scan.nextInt();
		if (coffee == 1) {
			System.out.println("아메리카노 나왔습니다");
		} else if (coffee == 2) {
			System.out.println("카페라떼 나왔습니다");
		
		 } else if (coffee == 3) {
			System.out.println("모카라떼 나왔습니다");
		
		} else if (coffee == 4) {
			System.out.println("카라멜 라떼 나왔습니다");
		} else if (coffee == 0) {
			System.out.println("감사합니다 또 오세요");

		}

	}

}
