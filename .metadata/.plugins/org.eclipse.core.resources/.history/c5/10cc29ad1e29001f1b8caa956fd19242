package chap99;

import java.util.Scanner;

public class 시험연습 {

	public static void main(String[] args) {
		// 카페 키오스크 while이용해서 만들어보기
		// int i = 1;
		// while (i <= 5) {
		// System.out.println(i);
		// i++;}

		Scanner scan = new Scanner(System.in);

		// System.out.println("어서오세요");
		// System.out.println("1.커피, 2주스,3.쉐이크,4.디저트0.종료");
		int coffee = scan.nextInt();
		while (coffee != 0) {
			System.out.println("어서오세요");
			System.out.println("메뉴를 골라주세요");
			System.out.println("1.커피");
			System.out.println("2.주스");
			System.out.println("3.쉐이크");
			System.out.println("4.디저트");
			System.out.println("0.종료");

			coffee = scan.nextInt();
			if (coffee >= 0 && coffee <= 4) {
				if (coffee == 1) {
					System.out.println("커피드리겠습니다");
				} else if (coffee == 2) {
					System.out.println("주스드리겠습니다");
				} else if (coffee == 3) {
					System.out.println("쉐이크 드리겠습니다");
				} else if (coffee == 4) {
					System.out.println("디저트 드리겠습니다");
				} else if (coffee == 0) {
					System.out.println("감사합니다 다음에 또 오세요");
				}

			}
		}

	}
}
